      <div class="custom-player__actions">
        <button class="speed js-speed" data-speed="0.5">0.5</button>
        <button class="prev-btn js-prev-btn">{{ icon('skip') }}</button>
        <button class="play-btn js-play-btn">
          {{ icon('play') }}
          {{ icon('pause') }}
        </button>
        <button class="next-btn js-next-btn">{{ icon('skip') }}</button>
        <button class="speed js-speed" data-speed="1.5">1.5</button>
      </div>

      <audio controls>
        <source src="files/Guns-N-Roses-Sweet-Child-O-Mine.mp3" type="audio/mp3" class="js-audio-source">
      </audio>

      <div class="js-wave-container"></div>
    </div>



